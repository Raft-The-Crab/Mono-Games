{
  "name": "mono-games-ultimate",
  "private": true,
  "version": "2.0.0",
  "description": "The ULTIMATE browser gaming platform - 27+ games, cloud sync, achievements, leaderboards, and more!",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:client",
    "dev:client": "cd src/client && vite",
    "dev:server": "cd src/server && node --watch server.js",
    "dev:all": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "build": "npm run build:web",
    "build:web": "cd src/client && vite build",
    "build:server": "cd src/server && npm run build",
    "build:desktop": "node scripts/build-desktop.js",
    "build:mobile": "node scripts/build-mobile.js",
    "build:all": "npm run build:web && npm run build:desktop && npm run build:mobile",
    "package:games": "node scripts/package-games.js",
    "preview": "cd src/client && vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "install:all": "npm install && cd src/client && npm install && cd ../server && npm install"
  },
  "workspaces": [
    "src/client",
    "src/server",
    "src/desktop",
    "src/mobile"
  ],
  "keywords": [
    "games",
    "gaming-platform",
    "cross-platform",
    "pwa",
    "electron",
    "capacitor",
    "react",
    "nodejs"
  ],
  "author": "Mono Games Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aliciamaye/Mono-Games.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.4",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}